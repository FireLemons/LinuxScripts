# Make vim the default editor
export VISUAL=vim
export EDITOR="$VISUAL"

# Make youtube-dl executable
chmod a+rx /usr/local/bin/youtube-dl

# Node Configuration
# Configure node global packages not to require sudo
npm config set prefix ~/.local
PATH=~/.local/bin/:$PATH
# Install some global node packages
npm i -g chai
npm i -g mocha
npm i -g http-server
npm i -g minify
npm i -g nodemon
npm i -g sass
npm i -g standard

# Create Games directory from wine home
cd .wine/drive_c/users/flysy
mkdir Games
cd ~
ln -s .wine/drive_c/users/flysy/Games Games
